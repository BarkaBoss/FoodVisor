<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relaBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/restImg"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/ic_menu_camera" />
        <TextView
            android:id="@+id/tvRestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/restImg"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_menu_slideshow"
            android:text="Name of Rest" />
        <TextView
            android:id="@+id/tvRestPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/restImg"
            android:layout_below="@id/tvRestName"
            android:drawableLeft="@drawable/ic_menu_send"
            android:text="Phone Number" />
        <TextView
            android:id="@+id/tvRestAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/restImg"
            android:layout_below="@id/tvRestPhone"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:text="Address" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>